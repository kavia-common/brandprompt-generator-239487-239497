{
  "manifest_version": 3,
  "name": "BrandPrompt Generator",
  "short_name": "BrandPrompt",
  "version": "0.1.0",
  "description": "Generate on-brand prompts using your saved brand settings.",
  "action": {
    "default_title": "BrandPrompt Generator",
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3001/*",
    "http://127.0.0.1:3001/*"
  ],
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
